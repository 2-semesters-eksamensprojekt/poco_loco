---
import Menu from "./Menu.astro";
---

<section class="hero">
  <Menu logo="/logo.svg" />
  <h1>Real Taste of Mexico</h1>
  <h2>A vibrant taste experience</h2>
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 100vh;
    background-image: url("/hero_desktop.webp");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    margin-bottom: 4rem;
  }

  .hero h1,
  .hero h2 {
    position: absolute;
    color: #faf2e8;
  }

  .hero h1 {
    font-size: clamp(4.5rem, 7vw, 8rem);
    line-height: 1.1;
    max-width: 500px;
    transform: translateY(-50%);
    left: 4%;
    top: 80%;
  }

  .hero h2 {
    font-size: clamp(1.5rem, 2.5vw, 2.5rem);
    transform: translateY(-50%);
    left: 5%;
    top: 92%;
  }

  @media (min-width: 1200px) {
    .hero {
      margin-bottom: 10rem;
    }
    .hero h1 {
      max-width: 1500px;
      left: 4%;
      top: 75%;
    }

    .hero h2 {
      left: 15%;
      top: 84%;
    }
  }
</style>
