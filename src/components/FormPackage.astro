---
const { package1, package2, package3 } = Astro.props;
---

<section>
  <div class="formular">
    <h2>Choose Your Taco Pack</h2>
    <form class="package">
      <label for="pack">Pack Type</label>
      <select id="pack" name="pack">
        <option value="australia">Australia</option>
        <option value="canada">Canada</option>
        <option value="usa">USA</option>
      </select>

      <label for="Quantity">Quantity *</label>
      <input type="text" id="Quantity" />
    </form>

    <form class="addOns">
      <p>Optional Add-Ons</p>
      <input type="checkbox" id="totopos" name="totopos" value="totopos" />
      <label for="totopos"> Totopos</label><br />
      <input type="checkbox" id="pico" name="pico" value="pico" />
      <label for="pico"> Pico de Gallo</label><br /><br />
    </form>
  </div>
</section>

<style>
  section {
    background-color: aquamarine;
    border-radius: 40px;
    margin: 0 2rem;
  }

  .formular {
    padding: 2rem 3rem;
  }

  .package label {
    display: block;
    margin-bottom: 0.7rem;
    padding-left: 0.3rem;
    font-size: 1.2rem;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .package input,
  .package select {
    width: 100%;
    margin-bottom: 2.5rem;
    padding: 15px;
    border-radius: 20px;
    box-sizing: border-box;
    font-size: 1.1rem;
    padding-left: 1rem;
  }

  .addOns label {
    font-size: 1.2rem;
  }

  p {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .addOns input {
    scale: 1.5;
    margin-right: 0.5rem;
  }
</style>
