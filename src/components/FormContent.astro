---
const { tacos, chicken, pork, birria, salsa } = Astro.props;
---

<section>
  <h2>Whatâ€™s Included</h2>
  <div class="content">
    <div class="grid_1-1">
      <div>
        <h3>{tacos} Tacos</h3>
        <p>{chicken}x Chicken, {pork}x Pork, {birria}x Birria</p>
      </div>
      <div>
        <h3>{salsa} Salsas</h3>
        <p>Salsa verde, Chipotle, Guajillo</p>
      </div>
      <div>
        <h3>Mixed Toppings</h3>
        <p>Coriands, Onions, Limes</p>
      </div>
      <div>
        <h3>Cooking Guide</h3>
        <p>Step-by-step instructions</p>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    background-color: #ffffff;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
    border-radius: 40px;
    margin: 0 2rem;
    padding: 2rem 3rem;
  }
  h2 {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: #4d1432;
  }

  h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: #4d1432;
  }

  p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: #4d1432;
    white-space: nowrap;
  }

  @media (min-width: 1000px) {
    .content {
      display: flex;
      justify-content: start;
    }
    .grid_1-1 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      column-gap: 100px;
      row-gap: 0;
      column-gap: 350px;
      margin: 0 4rem;
    }

    h2 {
      text-align: center;
    }

    h3,
    p {
      text-align: start;
    }
  }
</style>
